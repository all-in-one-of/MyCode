void linknearpt(vector pos; int ptnum; float maxdist; int maxpts)
{   
    int  nearpts[] = nearpoints(0, pos, maxdist, maxpts)[1:];
    foreach (int nearpt; nearpts)
    {
        if (ptnum > nearpt) 
        {
            addprim(0, 'polyline', nearpt, ptnum);

        }

    }
}

